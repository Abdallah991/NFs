<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:orientation="vertical"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cartCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="-12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/imageShopLayout"
                android:layout_width="130dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/shopImage"
                    android:layout_width="130dp"
                    android:layout_marginLeft="-5dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_item_1"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:id="@+id/cartShopItemDetails">
                <ImageView
                    android:id="@+id/deleteShopItem"
                    android:layout_width="16dp"
                    android:layout_height="21dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="65dp"
                    android:src="@drawable/bin" />
                <TextView
                    android:id="@+id/cartItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BHD 3.990"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_semi_bold" />
                <TextView
                    android:id="@+id/cartItemDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="65dp"
                    android:text="@string/meebie_for_play_emotional_expression"
                    android:textColor="@color/appGrey2"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>