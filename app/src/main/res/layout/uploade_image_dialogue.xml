<androidx.cardview.widget.CardView android:id="@+id/doctorsCard"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:padding="20dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="20dp"
    android:layout_gravity="center"
    android:elevation="1dp"
    app:cardPreventCornerOverlap="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:id="@+id/uploadImageDialog">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                app:fontFamily="@font/poppins_regular" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/close"
                android:id="@+id/cancelUploading"
                android:gravity="end" />

        </LinearLayout>

        <ImageView
            android:id="@+id/userImageViewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/appGrey2"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/uploadImage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_gradient"
                android:text="@string/select_photo"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fontFamily="@font/poppins"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/selectMonster"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_gradient"
                android:text="@string/select_monster"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fontFamily="@font/poppins"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>